{
  "name": "@imccc/hex-viewer-js",
  "version": "1.0.0",
  "description": "A high-performance WebGPU-based hex viewer component",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./react": {
      "import": "./dist/react.js",
      "types": "./dist/react.d.ts"
    },
    "./vue": {
      "import": "./dist/vue.js",
      "types": "./dist/vue.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev:lib": "vite",
    "dev:purejs": "vite example/purejs",
    "dev:vue": "cd example/vue && bun dev",
    "dev:react": "cd example/react && bun dev",
    "build:lib": "vite build",
    "build:all": "bun build:lib && bun build:vue && bun build:react",
    "build:vue": "cd example/vue && bun run build",
    "build:react": "cd example/react && bun run build",
    "build:demos": "bun run build:lib && vite build -c example/purejs/vite.config.ts && cd example/vue && bun run build && cd ../../example/react && bun run build",
    "deploy:demos": "bun run build:demos && gh-pages -d docs",
    "release": "bun run build:all && npm publish",
    "prepublishOnly": "bun run build:all"
  },
  "keywords": [
    "hex",
    "hex-viewer",
    "webgpu",
    "binary",
    "viewer",
    "react",
    "vue"
  ],
  "author": "Chris Chen <chris@imccc.dev>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ImChrisChen/hex-viewer.git"
  },
  "homepage": "https://hex-viewer.imccc.dev",
  "bugs": {
    "url": "https://github.com/ImChrisChen/hex-viewer/issues"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/react": "^19.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "@vitejs/plugin-vue": "^5.0.0",
    "@webgpu/types": "^0.1.50",
    "gh-pages": "^6.3.0",
    "typescript": "^5.0.0",
    "vite": "^6.0.0",
    "vite-plugin-dts": "^4.0.0"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "vue": ">=3.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "vue": {
      "optional": true
    }
  }
}